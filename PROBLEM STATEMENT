b=int(input("enter num of blocks"))
s=int(input("enter num of blocks"))
k=int(input("enter num of blocks"))
sum =0
print("---------------------")
for i in range(b):
     print(f"-----{i+1}----")
     count=0
     for j in range(1-i):
         for k in range(s):
             print("*",end=" ")
             count=count + 1
         print()
     print(count)
     sum+=count
print(f"total:{sum}")
